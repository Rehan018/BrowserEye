{
	"manifest_version": 3,
	"name": "BrowserEye",
	"description": "AI-powered browser automation assistant by Rehan Alam",
	"version": "0.0.48",
	"permissions": [
		"sidePanel",
		"storage",
		"contextMenus",
		"activeTab",
		"scripting",
		"webNavigation",
		"tabs"
	],
	"host_permissions": [
		"<all_urls>",
		"http://localhost:*/*",
		"http://127.0.0.1:*/*"
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js", "intelligence-content.js", "automation-content.js"],
			"run_at": "document_idle"
		},
		{
			"matches": ["*://www.google.com/search*", "*://www.bing.com/search*", "*://duckduckgo.com/*", "*://search.yahoo.com/*"],
			"js": ["search-content.js"],
			"run_at": "document_end"
		}
	],
	"icons": {
		"64": "icons/icon64.png",
		"128": "icons/icon128.png",
		"256": "icons/icon256.png",
		"512": "icons/icon512.png"
	},
	"side_panel": {
		"default_path": "sidebar.html"
	},
	"action": {
		"default_title": "Use BrowserEye"
	},
	"commands": {
		"open_sidebar": {
			"suggested_key": {
				"default": "Ctrl+Shift+U"
			},
			"description": "Open the BrowserEye sidebar"
		}
	}
}
